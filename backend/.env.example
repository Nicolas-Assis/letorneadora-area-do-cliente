# Configurações do Servidor
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Firebase Admin SDK
FIREBASE_PROJECT_ID=seu-projeto-firebase
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto-firebase.iam.gserviceaccount.com

# Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-chave-publica
SUPABASE_SERVICE_ROLE_KEY=sua-chave-servico

# Database
DATABASE_HOST=db.seu-projeto.supabase.co
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=sua-senha-do-banco
DATABASE_NAME=postgres
DATABASE_SCHEMA=public

# Storage
SUPABASE_STORAGE_BUCKET=products
MAX_IMAGE_MB=5
ALLOWED_IMAGE_MIME=image/jpeg,image/png,image/webp

# Asaas Payment Gateway
ASAAS_API_KEY=sua-chave-api-asaas
ASAAS_ENV=sandbox
ASAAS_WEBHOOK_SECRET=seu-secret-webhook-asaas

# Swagger
SWAGGER_TITLE=Le Torneadora API
SWAGGER_DESCRIPTION=API robusta para o portal do cliente com Firebase Auth
SWAGGER_VERSION=1.0.0

