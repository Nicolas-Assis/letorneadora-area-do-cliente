# Configurações do Servidor
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT
JWT_SECRET=le-torneadora-jwt-secret-super-secure-2024-minimum-32-chars

# Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-chave-publica
SUPABASE_SERVICE_ROLE_KEY=sua-chave-servico

# Database
DATABASE_HOST=db.seu-projeto.supabase.co
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=sua-senha-do-banco
DATABASE_NAME=postgres
DATABASE_SCHEMA=public

# Storage
SUPABASE_STORAGE_BUCKET=products
MAX_IMAGE_MB=5
ALLOWED_IMAGE_MIME=image/jpeg,image/png,image/webp

# Swagger
SWAGGER_TITLE=Le Torneadora API
SWAGGER_DESCRIPTION=API robusta para o portal do cliente
SWAGGER_VERSION=1.0.0

